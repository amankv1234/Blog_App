<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./partials/head') %>
  <title>Sign Up</title>
  <style>
    body {
      background: linear-gradient(135deg, #9face6 0%, #74ebd5 100%);
      min-height: 100vh;
      font-family: 'Poppins', sans-serif;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    /* ===== NAVBAR ===== */
    nav {
      position: fixed;
      top: 0;
      width: 100%;
      z-index: 1000;
      background: #ffffffcc;
      backdrop-filter: blur(10px);
      box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

    /* ===== SIGNUP CONTAINER ===== */
    .signup-container {
      margin-top: 80px;
      display: flex;
      justify-content: center;
      align-items: center;
      width: 100%;
    }

    .signup-box {
      background: #fff;
      padding: 40px 35px;
      border-radius: 20px;
      box-shadow: 0 10px 25px rgba(0,0,0,0.15);
      width: 400px;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .signup-box:hover {
      transform: translateY(-5px);
      box-shadow: 0 12px 30px rgba(0,0,0,0.2);
    }

    .signup-box h2 {
      text-align: center;
      color: #333;
      margin-bottom: 25px;
      font-weight: 600;
    }

    .form-label {
      font-weight: 500;
      color: #444;
    }

    .form-control {
      border-radius: 10px;
      padding: 10px 15px;
      border: 1px solid #ccc;
      transition: all 0.3s ease;
    }

    .form-control:focus {
      border-color: #6c63ff;
      box-shadow: 0 0 5px rgba(108,99,255,0.4);
    }

    .btn-primary {
      background-color: #6c63ff;
      border: none;
      width: 100%;
      padding: 10px;
      font-size: 16px;
      border-radius: 10px;
      transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
      background-color: #574fd8;
    }

    .text-center a {
      color: #6c63ff;
      text-decoration: none;
      font-weight: 500;
    }

    .text-center a:hover {
      text-decoration: underline;
    }

    @media (max-width: 480px) {
      .signup-box {
        width: 90%;
        padding: 30px 20px;
      }
    }
  </style>
</head>

<body>
  <!-- Navbar -->
  <%- include('./partials/nav') %>

  <!-- Signup Box -->
  <div class="signup-container">
    <div class="signup-box">
      <h2>üìù Create Account</h2>
      <form action="/user/signup" method="POST">
        <div class="mb-3">
          <label for="fullName" class="form-label">Full Name</label>
          <input type="text" class="form-control" id="fullName" name="fullName" placeholder="Enter your full name" required>
        </div>

        <div class="mb-3">
          <label for="email" class="form-label">Email address</label>
          <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" required>
          <div id="emailHelp" class="form-text mt-1">We'll never share your email with anyone else.</div>
        </div>

        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input type="password" class="form-control" id="password" name="password" placeholder="Create a password" required>
        </div>

        <button type="submit" class="btn btn-primary">Sign Up</button>
      </form>

      <p class="mt-3 text-center">
        Already have an account? <a href="/user/signin">Sign in</a>
      </p>
    </div>
  </div>

  <%- include('./partials/script') %>
</body>
</html>
